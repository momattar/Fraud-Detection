 @model PJJ.ViewModels.LoansVM

@{
    ViewData["Title"] = "Fraud Detection";
}


<form method="post">

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            Delinquency Counters
        </div>
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label asp-for="Dpd_5_cnt" class="form-label"></label>
                <input asp-for="Dpd_5_cnt" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="Dpd_5_cnt" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Dpd_15_cnt" class="form-label"></label>
                <input asp-for="Dpd_15_cnt" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="Dpd_15_cnt" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Dpd_30_cnt" class="form-label"></label>
                <input asp-for="Dpd_30_cnt" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="Dpd_30_cnt" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            Loan Information
        </div>
        <div class="card-body row g-3">
            <div class="col-md-6">
                <label asp-for="Close_loans_cnt" class="form-label"></label>
                <input asp-for="Close_loans_cnt" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="Close_loans_cnt" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Past_billings_cnt" class="form-label"></label>
                <input asp-for="Past_billings_cnt" class="form-control" type="number" step="0.1" required />
                <span asp-validation-for="Past_billings_cnt" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            Region and Demographics
        </div>
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label asp-for="Federal_district_nm" class="form-label"></label>
                <input asp-for="Federal_district_nm" class="form-control" type="number" required />
                <span asp-validation-for="Federal_district_nm" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" type="number" min="18" max="120" required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select" required>
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            Payment Type
        </div>
        <div class="card-body">
            <label asp-for="SelectedPaymentType">Payment Type</label>
            <select asp-for="SelectedPaymentType" class="form-control" required>
                <option value="">-- Select Payment Type --</option>
                <option value="0">Type 0</option>
                <option value="1">Type 1</option>
                <option value="2">Type 2</option>
                <option value="3">Type 3</option>
                <option value="4">Type 4</option>
                <option value="5">Type 5</option>
            </select>
            <span asp-validation-for="SelectedPaymentType" class="text-danger"></span>
        </div>
    </div>
    <!-- Credit Scores -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Credit Scores</div>
        <div class="card-body row g-3">
            <div class="col-md-6">
                <label asp-for="Score_1" class="form-label"></label>
                <input asp-for="Score_1" class="form-control" type="number" step="0.1" min="0" max="1000" value="600.0" required />
                <span asp-validation-for="Score_1" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Score_2" class="form-label"></label>
                <input asp-for="Score_2" class="form-control" type="number" step="0.1" min="0" max="1000" value="600.0" required />
                <span asp-validation-for="Score_2" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Loan Reporting Date -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Loan Reporting Date</div>
        <div class="card-body row g-3">
            <div class="col-md-3">
                <label asp-for="Rep_loan_date_year" class="form-label">Year</label>
                <input asp-for="Rep_loan_date_year" class="form-control" type="number" min="2000" max="2025" value="2024" required />
                <span asp-validation-for="Rep_loan_date_year" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Rep_loan_date_month" class="form-label">Month</label>
                <input asp-for="Rep_loan_date_month" class="form-control" type="number" min="1" max="12" value="1" required />
                <span asp-validation-for="Rep_loan_date_month" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Rep_loan_date_day" class="form-label">Day</label>
                <input asp-for="Rep_loan_date_day" class="form-control" type="number" min="1" max="31" value="1" required />
                <span asp-validation-for="Rep_loan_date_day" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Rep_loan_date_weekday" class="form-label">Weekday</label>
                <select asp-for="Rep_loan_date_weekday" class="form-control" required>
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
                <span asp-validation-for="Rep_loan_date_weekday" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- First Loan Date -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">First Loan Date</div>
        <div class="card-body row g-3">
            <div class="col-md-3">
                <label asp-for="First_loan_year" class="form-label">Year</label>
                <input asp-for="First_loan_year" class="form-control" type="number" min="2000" max="2025" value="2020" required />
                <span asp-validation-for="First_loan_year" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_loan_month" class="form-label">Month</label>
                <input asp-for="First_loan_month" class="form-control" type="number" min="1" max="12" value="1" required />
                <span asp-validation-for="First_loan_month" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_loan_day" class="form-label">Day</label>
                <input asp-for="First_loan_day" class="form-control" type="number" min="1" max="31" value="1" required />
                <span asp-validation-for="First_loan_day" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_loan_weekday" class="form-label">Weekday</label>
                <select asp-for="First_loan_weekday" class="form-control" required>
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
                <span asp-validation-for="First_loan_weekday" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- First Overdue Date -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">First Overdue Date (Optional)</div>
        <div class="card-body row g-3">
            <div class="col-md-3">
                <label asp-for="First_overdue_date_year" class="form-label">Year</label>
                <input asp-for="First_overdue_date_year" class="form-control" type="number" min="2000" max="2025" />
                <span asp-validation-for="First_overdue_date_year" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_overdue_date_month" class="form-label">Month</label>
                <input asp-for="First_overdue_date_month" class="form-control" type="number" min="1" max="12" />
                <span asp-validation-for="First_overdue_date_month" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_overdue_date_day" class="form-label">Day</label>
                <input asp-for="First_overdue_date_day" class="form-control" type="number" min="1" max="31" />
                <span asp-validation-for="First_overdue_date_day" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="First_overdue_date_weekday" class="form-label">Weekday</label>
                <select asp-for="First_overdue_date_weekday" class="form-control" required>
                    <option value="-1">No Overdue</option>
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
                <span asp-validation-for="First_overdue_date_weekday" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Delinquency Indicator -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Delinquency Indicator</div>
        <div class="card-body">
            <label asp-for="Has_delinquency" class="form-label">Has Delinquency</label>
            <select asp-for="Has_delinquency" class="form-control" required>
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
            <span asp-validation-for="Has_delinquency" class="text-danger"></span>
        </div>
    </div>
    <!-- Continue applying same layout for other sections: Scores, Dates, Delinquency -->
    <!-- Last Card: Submit -->
    <div class="text-center">
        <button type="submit" class="btn btn-success w-100 px-5">Predict</button>
    </div>
</form>
